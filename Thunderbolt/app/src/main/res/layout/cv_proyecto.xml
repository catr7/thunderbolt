<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvProyectos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtVEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:text="Estado: "
                    android:layout_gravity="center_horizontal"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txtVnombreEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVEstructura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estructura: "
                    android:layout_weight="0.05"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txtVnombreEstructura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:textSize="15sp"
                    android:text="Correo: "
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txtVnombreCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0.7"
                    android:ellipsize="marquee"
                    android:maxLength="23"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtVEstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estatus: "
                    android:layout_weight="0.14"
                    android:gravity="end" />

                <ImageView
                    android:id="@+id/imgVEstatus"
                    android:layout_width="28dp"
                    android:layout_marginTop="-5dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="false"
                    app:srcCompat="@mipmap/estatus_incompleto" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgBEditarProyecto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="6dp"
                android:background="@color/cardview_light_background"
                app:srcCompat="@mipmap/ic_editar" />

            <ImageButton
                android:id="@+id/imgBBorrarProyecto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/cardview_light_background"
                app:srcCompat="@mipmap/ic_borrar" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
